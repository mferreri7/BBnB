    <ul>
      <li>Model: <%= @boat.model %></li>
      <li>Type: <%= @boat.boat_type %></li>
      <li>Capacity (people): <%= @boat.capacity %></li>
      <li>Registration Year: <%= @boat.year %></li>
      <li>Location: <%= @boat.location %></li>
