<h1>Boats</h1>
<div class="maincontainer">
  <div class="row">
    <% @boats.each do |b| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="boat-card">
              <div class="boat-description">
                <h3><%= link_to b.make, boat_path(f) %></h3>
                <p><%= b.model %></p>
                <i class="fas fa-user"></i>
                <span class="capacity"><%= b.capacity %></span>
                <i class="fas fa-dollar-sign"></i>
                <span class="price"><%= b.price %></span>
              </div>
              <div class="card-footer">
                <p class="more-info">
                  <%= link_to "More info", boat_path(b) %>
                </p>
              </div>
            </div>
        </div>
    <% end %>
  </div>
  <div id="map" style="width: 500px; height: 500px"></div>
</div>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<script type="text/javascript">
var myLatlng = new google.maps.LatLng(48.8655909, 2.378983);

var myOptions = {
  zoom: 16,
  center: myLatlng,
  scrollwheel: false,
  mapTypeId: google.maps.MapTypeId.ROADMAP,
  styles: [] // TODO: replace [] with an array from https://snazzymaps.com/
};

var map = new google.maps.Map(document.getElementById('map'), myOptions);
var marker = new google.maps.Marker({
  position: myLatlng,
  map: map,
  title: "You are here!"
});
</script>
